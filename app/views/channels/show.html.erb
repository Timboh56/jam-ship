<div id='t1' class='fade-animate mvl text-center hide toggle t1'>
  <h3>
    Nothing here yet. Come back soon.
  </h3>
</div>
<div class="onoffswitch">
  <input data-toggle-class='hide' data-target='t1' class='toggle onoffswitch-checkbox' type="checkbox" name="onoffswitch-instrument" id="myonoffswitch-1" checked>
  <label class="onoffswitch-label" for="myonoffswitch-1">
      <span class="onoffswitch-inner"></span>
      <span class="onoffswitch-switch"></span>
  </label>
</div>
<div class='flash-messages'>

</div>
<div class='full-width mvl'>
  <h3> Channel <%= @channel.name %>
    <% if current_user == @channel.user %>
      <div class='inline pull-right'>
        <a class='edit-btn'>
          <%= fa_icon 'edit' %>
        </a>
        <a class='delete-btn'>
          <%= fa_icon 'remove' %>
        </a>
      </div>
    <% end %>
  </h3>
</div>
<%= render partial: 'partials/orig_synth' %>
<%= render partial: 'partials/templates/alert_templates' %>
<script type='text/javascript'>
  $(document).ready(function() {
    var clips = [];
    <% @channel.clips.each do |clip| %>
      clips.push({ id: <%= clip.id %>, url: '<%= clip.attachment.url %>' });
    <% end %>
    window.initialize({
      channel: '<%= params[:id] %>',
      clips: clips,
      <% if current_user == @channel.user %>
        owner: true,
      <% end %>
      peer_id: '<%= @channel.peer_id %>'
    });
  });
</script>