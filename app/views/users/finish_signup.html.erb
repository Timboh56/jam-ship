<div id="add-email" class="mtxl col-xs-12 col-sm-8 col-sm-offset-2 container">
  <div class='row'>
    <div class='col-xs-12'>
      <h3>Add Email</h3>
    </div>
  </div>
  <%= form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
    <% if @show_errors && current_user.errors.any? %>
      <div id="error_explanation">
        <% current_user.errors.full_messages.each do |msg| %>
          <%= msg %><br>
        <% end %>
      </div>
    <% end %>
    <div class='row mtl'>
      <div class="form-group">
        <div class='col-xs-12 col-sm-2'>
          <%= f.label :email %>
        </div>
        <div class="col-xs-12 col-sm-8 controls">
          <%= f.text_field :email, :autofocus => true, :value => '', class: 'form-control input-lg', placeholder: 'Example: email@me.com' %>
          <p class="mtl help-block">Please confirm your email address, so I can send you pics of my abs. No spam, of course. </p>
        </div>
      </div>
    </div>
    <div class="row mtl actions">
      <div class='col-xs-12'>
        <%= f.submit 'Continue', :class => 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>