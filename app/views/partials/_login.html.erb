<div id="login-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content text-center">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><%= fa_icon 'times' %></span></button>
        <h4 class="modal-title">Login</h4>
      </div>
      <div class="modal-body">
        <div class='bold mtl'>
          You must login to continue.
        </div>
        <div class='mtl'>
          <button type="button" class="btn btn-default btn-delete" data-dismiss="modal">
            <%= fa_icon 'remove' %>
            Cancel
          </button>
          <%= link_to "#{ fa_icon 'twitter' } Login".html_safe, omniauth_authorize_path('user', 'twitter'), { class: 'btn btn-primary login-btn'} %>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->