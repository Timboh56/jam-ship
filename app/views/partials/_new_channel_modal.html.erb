<div class='new-channel-modal modal fade'>
  <%= form_tag'channels', method: :post, class: 'full-width' do %>
    <div class='modal-dialog col-xs-9 col-sm-4 col-md-2'>
      <div class='modal-content'>
        <div class='modal-header'>
          <%= fa_icon 'plus' %> Channel
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><%= fa_icon 'times' %></span></button>

        </div>
        <div class='modal-body'>
          <%= text_field_tag 'channel[name]', '', { placeholder: 'Give it a name', class: 'mtmd form-control js-toggle fade '} %>
          <%= submit_tag 'Give it to me', { class: 'btn btn-primary mtmd js-toggle fade' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>