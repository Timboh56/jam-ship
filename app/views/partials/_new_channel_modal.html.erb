<div class='new-channel-modal modal fade'>
  <%= form_tag'channels', method: :post, class: 'full-width' do %>
    <div class='modal-dialog col-xs-9 col-sm-4 col-md-2'>
      <div class='modal-content'>
        <div class='modal-header'>
          <%= fa_icon 'plus' %> Channel
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><%= fa_icon 'times' %></span></button>

        </div>
        <div class='modal-body'>
          <%= text_field_tag 'channel[name]', '', { placeholder: 'Channel name', class: 'mtmd form-control fade in '} %>
          <div class='mtl'>
            <a type="button" class="btn delete-btn" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Cancel</span></a>
            <%= submit_tag 'OK', { class: 'btn mhmd btn-primary fade in' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>