<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New clip", new_clip_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @clips.each do |clip| %>
      <tr>
        <td><%= clip.name %></td>
        <td><%= link_to "Download clip", clip.attachment_url %></td>
        <td><%= button_to "Delete",  clip, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{clip.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>